upstream messaging {
    server 127.0.0.1:{{messaging_server_internal_port}};
}

# the nginx server instance
server {
    server_name {{messaging_server_external_host}};

{% if use_secure_http and not using_aws_elb %}
    listen {{messaging_server_external_port}} ssl;
    ssl_certificate {{nginx_home}}/ssl/{{certificate_crt_filename}};
    ssl_certificate_key {{nginx_home}}/ssl/{{certificate_key_filename}};
{% else %}
    listen {{messaging_server_external_port}};
{% endif %}

    location / {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      access_log /var/log/nginx/messaging_access.log;
      proxy_pass http://messaging;
      proxy_redirect off;
    }
}

{% if messaging_server_external_port != 80 and use_secure_http and not using_aws_elb %}
server {
    server_name {{messaging_server_external_host}};
    listen 80;
    listen [::]:80;
    return 301 https://$server_name$request_uri;
}
{% endif %}
