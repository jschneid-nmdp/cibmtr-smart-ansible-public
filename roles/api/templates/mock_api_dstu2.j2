upstream mock_api_dstu2 {
    server 127.0.0.1:{{mock_api_dstu2_server_internal_port}};
}

# the nginx server instance
server {
    server_name {{mock_api_dstu2_server_external_host}};

{% if use_secure_http and not using_aws_elb %}
    listen {{mock_api_dstu2_server_external_port}} ssl;
    ssl_certificate {{nginx_home}}/ssl/{{certificate_crt_filename}};
    ssl_certificate_key {{nginx_home}}/ssl/{{certificate_key_filename}};
{% else %}
    listen {{mock_api_dstu2_server_external_port}};
{% endif %}

    location /mock-api/ {
        rewrite ^/mock-api(.*)$ $1 last;
    }

    location / {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;
      proxy_set_header X-Forwarded-Port {{mock_api_dstu2_server_external_port}};
      proxy_read_timeout 120s;

      access_log /var/log/nginx/mock_api_dstu2_access.log;
      proxy_pass http://mock_api_dstu2;
      proxy_redirect off;
    }
}

{% if mock_api_dstu2_server_external_port != 80 and use_secure_http and not using_aws_elb %}
server {
    server_name {{mock_api_dstu2_server_external_host}};
    listen 80;
    listen [::]:80;
    return 301 https://$server_name$request_uri;
}
{% endif %}
